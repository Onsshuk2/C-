<Window x:Class="SQL_WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Viewer" Height="400" Width="300">
    <Grid>
        <Button Name="ShowClientsButton" Content="Показати клієнтів" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10" Click="ShowClients_Click"/>
        <Button Name="ShowEmButton" Content="Показати працівників" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,50,0,0" Click="ShowEm_Click"/>
        <Button Name="ShowSalesButton" Content="Показати продажі" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,100,0,0" Click="ShowSales_Click"/>
        <ListBox Name="ClientsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="100" Margin="170,10,0,0"/>
        <ListBox Name="EmployeesListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="100" Margin="170,70,0,0"/>
        <ListBox Name="SalesListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="100" Margin="170,130,0,0"/>
    </Grid>
</Window>

