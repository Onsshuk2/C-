<Window x:Class="APP_C_Sharp.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APP_C_Sharp"
               xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="UserApp" Height="350" Width="600">
    <Grid Background="#f3defc" Margin="0,0,2,-10">

        <Border MinWidth="400" Margin="15,0,40,0" Background="white" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20" RenderTransformOrigin="0.506,0.796" Height="143">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" Color="#b114f5" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="User Page" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"></TextBlock>


                <ListView x:Name="listUser" Margin="10"/>


            </StackPanel>
        </Border>

    </Grid>
</Window>